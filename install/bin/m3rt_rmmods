#!/bin/sh
MODULES=/usr/realtime/modules

if [ "${UID}" != 0 ]; then SUDO="sudo "; else SUDO=""; fi

rmmod=/sbin/rmmod

sync
$SUDO $rmmod m3ec.ko
#sync paranoia might be useful
sync
$SUDO $rmmod rtai_shm
sync
$SUDO $rmmod rtai_sem

sync
$SUDO $rmmod rtai_sched
sync
$SUDO $rmmod rtai_hal
sync
if [ -f $MODULES/rtai_smi.ko ]
then
  sync
  $SUDO $rmmod rtai_smi
fi



